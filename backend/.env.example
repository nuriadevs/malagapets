# .env.example
# Copia este archivo y configura las variables en Render

# ==========================================
# VARIABLES CRÍTICAS DE SEGURIDAD
# ==========================================
# Genera con: node -e "console.log(Array.from({length: 4}, () => require('crypto').randomBytes(16).toString('base64')).join(','))"
APP_KEYS=key1base64,key2base64,key3base64,key4base64

# Genera con: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))"
API_TOKEN_SALT=tu_api_token_salt
ADMIN_JWT_SECRET=tu_admin_jwt_secret
JWT_SECRET=tu_jwt_secret
TRANSFER_TOKEN_SALT=tu_transfer_token_salt

# ==========================================
# BASE DE DATOS - PostgreSQL en Render
# ==========================================
DATABASE_CLIENT=postgres
# Render proporciona esto automáticamente como "Internal Database URL"
DATABASE_URL=postgresql://user:password@host:5432/database

# O usa credenciales individuales (Render proporciona ambas)
DATABASE_HOST=tu-db-host.oregon-postgres.render.com
DATABASE_PORT=5432
DATABASE_NAME=strapi_blog
DATABASE_USERNAME=strapi_blog_user
DATABASE_PASSWORD=tu_password_seguro
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Pool de conexiones
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000
DATABASE_SCHEMA=public

# ==========================================
# CONFIGURACIÓN DEL SERVIDOR
# ==========================================
HOST=0.0.0.0
PORT=10000
NODE_ENV=production

# URL pública de tu backend en Render
PUBLIC_URL=https://tu-app-backend.onrender.com
STRAPI_ADMIN_BACKEND_URL=https://tu-app-backend.onrender.com
IS_PROXIED=true

# ==========================================
# FRONTEND - CORS
# ==========================================
# URLs permitidas para CORS
FRONTEND_URL=https://tu-app-frontend.vercel.app
CLIENT_URL=https://tu-app-frontend.vercel.app

# ==========================================
# RESEND - Email
# ==========================================
RESEND_API_KEY=re_tu_api_key_de_resend
RESEND_DEFAULT_FROM=blog@tudominio.com
RESEND_DEFAULT_REPLY_TO=info@tudominio.com

# ==========================================
# CLOUDINARY (Opcional - para uploads)
# ==========================================
# CLOUDINARY_NAME=tu_cloud_name
# CLOUDINARY_KEY=tu_api_key
# CLOUDINARY_SECRET=tu_api_secret

# ==========================================
# WEBHOOKS
# ==========================================
WEBHOOKS_POPULATE_RELATIONS=false